<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mypetapp.example.mypet">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.RegisterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.Fkucing_activity" />
        <activity android:name=".view.petgromingActivity" />
        <activity android:name=".view.adoptionActivity" />
        <activity
            android:name=".view.notifActivity"
            android:parentActivityName=".view.menuNav"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".view.SettingsActivity"
            android:parentActivityName=".view.menuNav"
            android:theme="@style/AppTheme2" />
        <activity android:name=".view.menuNav" />
        <activity android:name=".view.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.splash_activity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>