<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mypetapp.example.mypet">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.AboutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2"
            android:parentActivityName=".view.SettingsActivity"
            />
        <activity android:name=".view.FeedbackActivity"
            android:parentActivityName=".view.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2"/>
        <activity android:name=".view.PrivacyPolicyActivity"
            android:parentActivityName=".view.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2"/>
        <activity
            android:name=".view.editserActivity"
            android:parentActivityName=".view.menuNav"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.LupaPassActivity"
            android:parentActivityName=".view.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.RegisterActivity"
            android:parentActivityName=".view.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.petgromingActivity"
            android:parentActivityName=".view.menuNav"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.notifActivity"
            android:parentActivityName=".view.menuNav"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".view.Fkucing_activity"
            android:parentActivityName=".view.menuNav"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".view.SettingsActivity"
            android:parentActivityName=".view.menuNav"
            android:theme="@style/AppTheme2" />
        <activity android:name=".view.menuNav" />
        <activity
            android:name=".view.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.splash_activity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.adoptionActivity"
            android:parentActivityName=".view.menuNav"
            android:screenOrientation="portrait" />
    </application>

</manifest>