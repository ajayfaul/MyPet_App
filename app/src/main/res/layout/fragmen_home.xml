    </LinearLayout>



    <LinearLayout
        android:id="@+id/forum"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linear2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Forum"
            android:paddingLeft="8dp"
            android:textSize="20sp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <android.support.v7.widget.CardView
                        android:id="@+id/Fkucing"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="10"
                        app:cardBackgroundColor="@color/light_font"
                        app:cardCornerRadius="16dp"
                        app:cardPreventCornerOverlap="false"
                        >


                        <ImageView
                            android:id="@+id/imgFkucing"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icons8_cat_profile_480"

                            />
                    </android.support.v7.widget.CardView>

                    <!--anjing-->
                    <android.support.v7.widget.CardView
                        android:id="@+id/Fanjing"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="20dp"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="10"
                        app:cardBackgroundColor="@color/light_font"
                        app:cardCornerRadius="16dp"
                        app:cardPreventCornerOverlap="false">


                        <ImageView
                            android:id="@+id/imgFanjing"
                            android:layout_width="70dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icons8_pug_100"

                            />


                    </android.support.v7.widget.CardView>

                    <!--ikan-->

                    <android.support.v7.widget.CardView
                        android:id="@+id/Fikan"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="20dp"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="10"
                        app:cardBackgroundColor="@color/light_font"
                        app:cardCornerRadius="16dp"
                        app:cardPreventCornerOverlap="false">


                        <ImageView
                            android:id="@+id/imgikan"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icons8_aquarium_100"

                            />


                    </android.support.v7.widget.CardView>

                    <!--ularr-->

                    <android.support.v7.widget.CardView
                        android:id="@+id/Fular"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="10"
                        app:cardBackgroundColor="@color/light_font"
                        app:cardCornerRadius="16dp"
                        app:cardPreventCornerOverlap="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Fikan"
                        tools:ignore="MissingConstraints">


                        <ImageView
                            android:id="@+id/imgular"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icons8_year_of_snake_96"
                            />

                    </android.support.v7.widget.CardView>


                    <!--hamster-->

                    <android.support.v7.widget.CardView
                        android:id="@+id/Fhamster"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="10"
                        app:cardBackgroundColor="@color/light_font"
                        app:cardCornerRadius="16dp"
                        app:cardPreventCornerOverlap="false"
                        >


                        <ImageView
                            android:id="@+id/imghamster"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icons8_cute_hamster_100"

                            />

                    </android.support.v7.widget.CardView>

                    <!--kumbagn-->


                    <android.support.v7.widget.CardView
                        android:id="@+id/Fkumbang"
                        android:layout_width="87dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="24dp"
                        android:outlineSpotShadowColor="@color/text_shadow"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="100"
                        app:cardBackgroundColor="@color/light_font"
                        app:cardCornerRadius="16dp"
                        app:cardPreventCornerOverlap="false"
                        app:layout_constraintEnd_toStartOf="@+id/Fhamster"
                        app:layout_constraintHorizontal_bias="0.837"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Fkucing"
                        tools:ignore="MissingConstraints">


                        <ImageView
                            android:id="@+id/imgkumbang"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icons8_ladybird_100"

                            />


                    </android.support.v7.widget.CardView>


                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="189dp"
                        android:layout_marginTop="420dp"
                        android:outlineAmbientShadowColor="@color/text_shadow"
                        android:paddingLeft="28dp"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="10"
                        android:text="Forum"
                        android:textSize="20sp"
                        />
                </LinearLayout>
            </HorizontalScrollView>

    </LinearLayout>


    //-----------selesai------////
</LinearLayout>