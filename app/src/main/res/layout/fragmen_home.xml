                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:paddingLeft="8dp"
                        android:text="anjing"
                        android:textColor="@color/text_shadow_white" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="120dp"
                        android:paddingLeft="8dp"
                        android:text="chow-chow"
                        android:textColor="@color/text_shadow_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="140dp"
                        android:paddingLeft="8dp"
                        android:text="adopted"
                        android:textColor="@color/text_shadow_white" />


                </android.support.v7.widget.CardView>


                //--------------------memasukan latepost-------///

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView5"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginEnd="8dp"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="15dp"
                    >

                    <ImageView
                        android:id="@+id/hewan1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kucing"

                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:paddingLeft="8dp"
                        android:text="kucing"
                        android:textColor="@color/text_shadow_white" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="120dp"
                        android:paddingLeft="8dp"
                        android:text="himalaya"
                        android:textColor="@color/text_shadow_white" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="140dp"
                        android:paddingLeft="8dp"
                        android:text="not adopted"
                        android:textColor="@color/text_shadow_white" />


                </android.support.v7.widget.CardView>


                //--------------------memasukan latepost-------///

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView6"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginEnd="8dp"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/hewan4"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kelinci"

                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:paddingLeft="8dp"
                        android:text="Kelinci"
                        android:textColor="@color/text_shadow_white" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="120dp"
                        android:paddingLeft="8dp"
                        android:text="anggora"
                        android:textColor="@color/text_shadow_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="140dp"
                        android:paddingLeft="8dp"
                        android:text="not adopted"
                        android:textColor="@color/text_shadow_white" />


                </android.support.v7.widget.CardView>


                //--------------------memasukan latepost-------///

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginEnd="8dp"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="15dp"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:id="@+id/hewan5"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/burhan"

                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:paddingLeft="8dp"
                        android:text="Burung hantu"
                        android:textColor="@color/text_shadow_white" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="120dp"
                        android:paddingLeft="8dp"
                        android:text="-"
                        android:textColor="@color/text_shadow_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="140dp"
                        android:paddingLeft="8dp"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="10"
                        android:text="adopted"
