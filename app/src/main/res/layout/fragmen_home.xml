<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


            <!-- header-->
    <RelativeLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
       >


        <ImageView
            android:id="@+id/imgnotif"
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            app:srcCompat="@drawable/notif"
            android:contentDescription="TODO" />


        <ImageView

            android:id="@+id/imgsetting"
            android:layout_width="39dp"
            android:layout_height="33dp"
            android:layout_alignRight="@+id/imgnotif"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            app:srcCompat="@drawable/baseline_settings_black_24" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:text="MyPet"
            android:textSize="29dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- card view untuk adopsi-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="160dp"
            android:layout_height="94dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/cat_cropped"
            app:cardBackgroundColor="@color/colorPrimary"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            app:cardCornerRadius="16dp"
            app:cardPreventCornerOverlap="false" >

            <ImageView

                android:id="@+id/imgadoption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/rounded" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="ADOPTION"
                android:textColor="@color/text_shadow_white" />


        </android.support.v7.widget.CardView>

        // card view untuk pet grooming

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="160dp"
            android:layout_height="94dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="15dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            app:cardPreventCornerOverlap="false">

            <ImageView
                android:id="@+id/imgpetgroming"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/rounded2" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="PET GROOMING"
                android:textColor="@color/text_shadow_white" />


        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:paddingLeft="10dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:text="Lates Pet Adoption"
            android:textSize="16sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <HorizontalScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:orientation="horizontal"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                tools:layout_editor_absoluteX="0dp">

                //--------------------memasukan latepost-------///

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView4"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="28dp"

                    android:layout_marginEnd="8dp"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
