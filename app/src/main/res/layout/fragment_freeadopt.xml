                android:layout_alignParentTop="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="8dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardView2"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/hewan"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/anjing2"

                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:paddingLeft="8dp"
                    android:text="Anjing"
                    android:textColor="@color/text_shadow_white" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:paddingLeft="8dp"
                    android:text="Chow - chow"
                    android:textColor="@color/text_shadow_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140dp"
                    android:paddingLeft="8dp"
                    android:text="adopted"
                    android:textColor="@color/text_shadow_white" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="205dp"
                android:layout_height="226dp"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="39dp"

                android:layout_marginEnd="8dp"

                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="15dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/hewan1"
                    android:layout_width="match_parent"
                    android:layout_height="104dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kucing"

                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:paddingLeft="8dp"
                    android:text="kucing"
                    android:textColor="@color/text_shadow_white" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:paddingLeft="8dp"
                    android:text="himalaya"
                    android:textColor="@color/text_shadow_white" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140dp"
                    android:paddingLeft="8dp"
                    android:text="not adaopted"
                    android:textColor="@color/text_shadow_white" />


            </android.support.v7.widget.CardView>


            //--------------------memasukan latepost-------///


            //--------------------memasukan latepost-------///

            <android.support.v7.widget.CardView
                android:id="@+id/cardView6"
                android:layout_width="205dp"
                android:layout_height="226dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"

                android:layout_alignParentBottom="true"

                android:layout_marginStart="110dp"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="299dp"
                android:paddingLeft="30dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardView2"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/hewan4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
