<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.FeedbackActivity">

    <TextView
        android:id="@+id/pilihcategory"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:text="Please Select Category"
        android:textSize="16sp"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/listcategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/daftar_feedback"
        android:padding="16dp">

    </android.support.v7.widget.AppCompatSpinner>

    <TextView
        android:id="@+id/feedbacktitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:text="Feedback Title"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/edtfeedbacktitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:inputType="text"/>

    <TextView
        android:id="@+id/isifeedback"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="20dp"
        android:text="Please Leave Your Feedback Below"/>

    <EditText
        android:id="@+id/edtisifeedback"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:inputType="textMultiLine"
        android:shadowColor="@color/black" />

    <Button
        android:id="@+id/submitfeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/editbtnlogin"
        android:text="SUBMIT"
        android:textColor="@color/text_shadow_white"/>

</LinearLayout>